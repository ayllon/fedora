{
    "build": {
        "dockerfile": "./Dockerfile"
    },
    "postCreateCommand": ".devcontainer/setup.sh",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-azuretools.vscode-docker"
            ],
            "settings": {
                "files.eol": "\n",
                "files.insertFinalNewline": true,
                "editor.rulers": [
                    120
                ],
                "redhat.telemetry.enabled": false
            }
        }
    },
    "secrets": {
        "SSH_PUBLIC_KEY": {
            "description": "SSH public key"
        }
    }
}
